{
  "name": "trustbase",
  "version": "0.0.17",
  "description": "Blockchain-based (Ethereum) Public key and message database.",
  "repository": {
    "type": "git",
    "url": "https://github.com/ceoimon/trustbase.git"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "build"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=8"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "precommit": "lint-staged",
    "migrate": "truffle migrate",
    "testrpc": "ganache-cli",
    "testrpc:background": "npm run testrpc > testrpc.logs &",
    "test:contract": "truffle test",
    "test": "npm run test:contract",
    "migrate:rinkeby": "truffle migrate --network rinkeby",
    "prepublishOnly": "node scripts/clean-up-networks.js && npm run migrate:rinkeby && npm run uglify:web3"
  },
  "eslintIgnore": [
    "src/web3.lib.min.js",
    "web3/index.js"
  ],
  "devDependencies": {
    "ganache-cli": "^6.0.3",
    "glob": "^7.1.2",
    "husky": "^0.14.3",
    "jsonfile": "^4.0.0",
    "lint-staged": "^4.1.3",
    "truffle": "^3.4.11",
    "truffle-hdwallet-provider": "^0.0.3",
    "typescript": "^2.7.2",
    "uglify-js": "^3.3.2"
  },
  "dependencies": {
    "web3": "^1.0.0-beta.30"
  }
}
